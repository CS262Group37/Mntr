@hostname = http://api.mydomain.com:5000

# @name register_account
POST {{hostname}}/auth/register-account HTTP/1.1
Content-Type: application/json

{
    "email": "test@gmail.com",
    "password": "password",
    "firstName": "Bob",
    "lastName": "L"
}

###

# @name register_user
POST {{hostname}}/auth/register-user HTTP/1.1
Content-Type: application/json

{
    "role": "mentee"
}

###

# @name login
@email = {{register_account.request.body.email}}
@password = {{register_account.request.body.password}}
@role = {{register_user.request.body.role}}
POST {{hostname}}/auth/login HTTP/1.1
Content-Type: application/json

{
    "email" : "{{email}}",
    "password" : "{{password}}",
    "role": "{{role}}"
}

###

# @name view_users
GET {{hostname}}/auth/users

